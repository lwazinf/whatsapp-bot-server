generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Business {
  id          String   @id @default(nanoid())
  ownerPhone  String   @unique
  name        String
  category    String?
  createdAt   DateTime @default(now())
  products    Product[]
}

model Product {
  id          String   @id @default(nanoid())
  name        String
  price       Float    // Representing ZAR/Rands
  description String?  // New: For individual product details
  imageHandle String?  // New: To store the WhatsApp Media ID or URL
  businessId  String
  business    Business @relation(fields: [businessId], references: [id])
  createdAt   DateTime @default(now()) // New: For tracking daily trends
}

// For tracking user progress in the chat state machine
model UserState {
  phoneNumber String   @id
  state       String   // e.g., "AWAITING_PRODUCT_IMAGE", "CONFIRMING_PRODUCT"
  data        Json?    // Temporary storage for multi-step form data
  updatedAt   DateTime @updatedAt
}
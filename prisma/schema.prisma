generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // or "mysql" depending on your Railway DB
  url      = env("DATABASE_URL")
}

model Business {
  id          String   @id @default(nanoid())
  ownerPhone  String   @unique  // <--- Make sure this is exactly "ownerPhone"
  name        String
  category    String?
  createdAt   DateTime @default(now())
  products    Product[]
}

model Product {
  id          String   @id @default(nanoid())
  name        String
  price       Float
  description String?
  businessId  String
  business    Business @relation(fields: [businessId], references: [id])
}

// For tracking user progress in the chat
model UserState {
  phoneNumber String   @id
  state       String   // e.g., "AWAITING_BUSINESS_NAME", "AWAITING_PRICE"
  data        Json?    // Temporary storage for incomplete forms
  updatedAt   DateTime @updatedAt
}